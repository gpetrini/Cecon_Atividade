plot.title = element_text(colour = "black", size = 17, hjust=0.5),
legend.position = "none") +
labs(x = "Tipo de domicílio", y ="Percentual (%)",caption = "Fonte: Microdados da Pnad Covid19 - IBGE. Novembro 2020.",
